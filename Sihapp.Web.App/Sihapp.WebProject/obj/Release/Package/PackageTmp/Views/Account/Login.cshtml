@using Sihapp.WebProject.Models
@model LoginViewModel
@{
            ViewBag.Title = "Entrar";
}



<div class="container" style="position:relative; z-index: 80">


    <div class="row" style="align-content:center">
        <div class="col-sm-4">&nbsp;</div>
        <div class="col-sm-4" align="center" style="background-color: gainsboro; border-radius: 10px;">
            <br>
            <div class="row">
                <div class="col-sm-12" align="center">
                    <img src="~/sihappOficial.png" style="width:350px;height:250px;margin:0 auto" class="img-responsive" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12" align="center">
                    @*<h3 style="text-align:center; font-weight: 900;">
                            Sihapp Web
                        </h3>*@
                </div>
            </div>
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl, pwdType = ViewBag.PwdType }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                        @Html.LabelFor(m => m.Usuario, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @if (@ViewBag.userName == null)
                            {
                                @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control" })
                            }
                            else
                            {
                                @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control", @Value = ViewBag.userName })
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @if (@ViewBag.userName == null)
                            {
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            }
                            else
                            {
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @Value = ViewBag.secret })
                            }
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                            <div class="form-group">
                                <div class="col-sm-12; text-center">
                                    <input type="submit" value="Ingresar" class="btn btn-default; text-center btnRojo" title="Ingresar a Sihapp Web" />
                                </div>
                            </div>
                            <p class="text-center">
                                ¿No tienes cuenta?....<br>
                                <strong>
                                    @Html.ActionLink("Registrate dando click aquí.", "Register")
                                </strong>
                                <br />
                            </p>
                }
            </section>
        </div>

    </div>

</div>
